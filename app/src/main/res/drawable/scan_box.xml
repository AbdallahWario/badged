<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent center -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Top-left corner -->
    <item android:gravity="top|left">
        <shape android:shape="rectangle">
            <size
                android:width="30dp"
                android:height="5dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:gravity="top|left">
        <shape android:shape="rectangle">
            <size
                android:width="5dp"
                android:height="30dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <!-- Top-right corner -->
    <item android:gravity="top|right">
        <shape android:shape="rectangle">
            <size
                android:width="30dp"
                android:height="5dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:gravity="top|right">
        <shape android:shape="rectangle">
            <size
                android:width="5dp"
                android:height="30dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <!-- Bottom-left corner -->
    <item android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <size
                android:width="30dp"
                android:height="5dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <size
                android:width="5dp"
                android:height="30dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <!-- Bottom-right corner -->
    <item android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <size
                android:width="30dp"
                android:height="5dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <size
                android:width="5dp"
                android:height="30dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
</layer-list>