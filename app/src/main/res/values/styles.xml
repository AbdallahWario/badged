<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Card style -->
        <item name="cardViewStyle">@style/CardViewStyle</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Card view style -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Text Button style -->
    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="navigationIconTint">@android:color/white</item>
    </style>

    <!-- Tab layout style -->
    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorTextSecondary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>
</resources>